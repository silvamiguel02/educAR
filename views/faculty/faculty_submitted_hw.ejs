<%- include ("../partials/header")%>
<div class="container">
  <header class="d-flex justify-content-center py-3 text-center">
    <ul class="nav nav-pills">
      <li class="nav-item"><a class="nav-link" href="<%="/assignment/" + cid + "/" + id + "/" %>">Publicaciones</a></li>
      <li class="nav-item"><a class="nav-link" href="<%="/assignment/assign-show/" + cid + "/" %>">Tareas</a></li>
      <li class="nav-item"><a class="nav-link" href="<%="/assignment/show-students/" + cid  + "/"%>">Alumnos</a></li>
    </ul>
  </header>
</div>

<div class="container">
  <div class="h4">Revision de tareas - <%=title%></div>
  <% for(var i=0 ; i<data.length ; i++){ %>
  <div class="alert alert-warning" role="alert">
    <p class="h6"><%=data[i].st_name%> <a class = "attach_doc" href="<%="/assignment/images/" + data[i].h_filename + "/" %>">Enlace de la tarea: <%=data[i].hw_details%></a>
    </a></p>
      <div>
        <%if(data[i].checked == null) {%>
          <form class = "sub_form" action="<%="/assignment/marking/" + aid + "/" + cid + "/" + data[i]._id + "/" %>" method="post">
            <input class = "minput" type="Number" placeholder="Assign Marks" name="marks">
            <span class = "red">
              Unchecked
            </span>
          </form>
          <%}else{%>
          <span class = "green">
            Checked
          </span>
          <% }%>
      </div>
  </div>
  <%} %>
</div>
