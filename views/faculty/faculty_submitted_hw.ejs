<%- include ("../partials/header")%>
<div class="container">
  <header class="d-flex justify-content-center py-3 text-center">
    <ul class="nav nav-pills">
      <li class="nav-item"><a class="nav-link" href="<%="/assignment/assign-show/" + cid + "/" %>">📚Volver atras</a></li>
      <li class="nav-item"><a class="nav-link text-danger" href="/dashboard" %>">🎒Ir al tablon</a></li>
    </ul>
  </header>
</div>

<div class="container">
  <div class="h4 fw-bold">🔍Revision de tareas - <%=title%></div>
  <% for(var i=0 ; i<data.length ; i++){ %>
  <div class="alert alert-warning" role="alert">
    <p class="h6"><%=data[i].st_name%> <a class = "attach_doc" href="<%="/assignment/images/" + data[i].h_filename + "/" %>">Link del documento: <%=data[i].hw_details%></a>
    </a></p>
      <div>
        <%if(data[i].checked == null) {%>
          <form class = "sub_form" action="<%="/assignment/marking/" + aid + "/" + cid + "/" + data[i]._id + "/" %>" method="post">
            <input class = "minput" type="Number" placeholder="Ingresar nota" name="marks">
            <span class = "text-danger">
              No chequeado⛔
            </span>
          </form>
          <%}else{%>
          <span class = "text-success fw-bold">
            Chequeado✅
          </span>
          <% }%>
      </div>
  </div>
  <%} %>
</div>
